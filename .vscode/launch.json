    "version": "0.2.0",
    "configurations": [
        {
            "type": "kotlin",
            "request": "launch",
            "name": "OCN Node Launch",
            "projectRoot": "${workspaceFolder}",
            "mainClass": "snc.openchargingnetwork.node.ApplicationKt",
            "args": "",
            "vmArgs": "-Dspring.profiles.active=local-minikube"
        },
        {
            "type": "java",
            "name": "Attach to OCN Node (port 5005)",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005
        },
        {
            "type": "java",
            "name": "Run OCN Node with Gradle",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "snc.openchargingnetwork.node.ApplicationKt",
            "args": "",
            "vmArgs": "-Dspring.profiles.active=local-minikube",
            "env": {
                "JAVA_HOME": "${env:JAVA_HOME}"
            }
        }
    ]
}